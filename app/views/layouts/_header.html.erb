<div class="navbar  navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="<%= root_path %>" style="font-style: italic;">
        <!--<img src="/assets/starfish.jpg" alt="" />-->
        <b>AiBaby</b>
      </a>
      <ul class="nav">
        <li id='nav-articles'>
          <a href="<%= articles_path %>" class="nav-title">育儿经</a>
        </li>
        <li id="nav-users">
          <a href="<%= users_path %>" class="nav-title">达人</a>
        </li>
      </ul>
      <ul class="nav pull-right">
        <% if sign_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">账户&nbsp;<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>
                  <a href="<%= user_path current_user %>" class="nav-title">资料</a>
                </li>
                <li>
                  <a href="<%= edit_user_path current_user %>" class="nav-title">设置</a>
                </li>
                <li class="divider"></li>
                <li>
                  <a href="<%= signout_path %>" class="nav-title">退出</a>
                </li>
              </ul>
            </li>
        <% else %>
            <li><a href="<%= signup_path %>" class="nav-title">注册</a></li>
            <li><a href="<%= login_path %>" class="nav-title">登录</a></li>
        <% end %>
      </ul>
      <form class="navbar-search pull-left" action="<%= search_path %>">
        <input type="text" class="search-query" placeholder="Search" name="content">
      </form>
      <!-- 提示框 -->
      <label id="message" style="display: <%= (flash[:error] || flash[:notice])?"inline":"none" %>;"><%= flash[:error] || flash[:notice] %></label>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#nav-<%= params[:controller] %>").addClass('active');
    })
</script>
