<table>
  <tr>
    <td style='vertical-align:top;'>
      <div class="main-content">
        <h3 style="text-align: center;"><%= @article.title %></h3>

        <div>
          <%= @article.content.gsub("\r\n", "<br />").html_safe %>
        </div>
        <p style="text-align: right;">
          <%= render :partial => 'articles/article_maintenance', :locals => {:article => @article} %>
        </P>
        <%= render 'common/disqus' %>
      </div>
    </td>
    <td width='12px;'></td>
    <td style='vertical-align:top;'>
      <div class="side-bar">
        <div class="side-content">
          <%= render 'common/article_button' %>
        </div>
        <div class="side-content" style="margin-top: 5px;">
          <%= render 'common/article_latest' %>
        </div>
        <div class="side-content" style="margin-top: 5px;">
          <%= render 'common/article_hotest' %>
        </div>
      </div>
    </td>
  </tr>
</table>
